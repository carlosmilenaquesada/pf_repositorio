<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.SaleActivity">

    <Spinner
        android:id="@+id/spCustomersTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp" />

    <AutoCompleteTextView
        android:id="@+id/actvCustomerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce NIF/CIF del cliente"
        android:minHeight="48dp"
        android:textColorHint="#546E7A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etndArticleQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Introducir cantidad"
            android:inputType="number|numberDecimal|numberSigned"
            android:minHeight="48dp"
            android:text="3"
            android:textColorHint="#546E7A" />

        <EditText
            android:id="@+id/etArticleCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Introducir cÃ³digo"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="COD000001"
            android:textColorHint="#546E7A" />


        <Button
            android:id="@+id/btOpenScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Scanner" />

    </LinearLayout>

    <Button
        android:id="@+id/btPutArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvArticlesOnTicket"
        android:layout_width="match_parent"
        android:layout_height="316dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTitleTicketTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total" />

        <TextView
            android:id="@+id/tvTicketTotalAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/btPayTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar" />

    <Button
        android:id="@+id/btReserveTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar" />


</LinearLayout>