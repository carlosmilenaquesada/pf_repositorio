<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.activities.SalesManagementMenuActivity">

    <Button
        android:id="@+id/btShowReservedTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar tickets en reserva" />
    <Button
        android:id="@+id/btShowAllTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mostrar todos los tickets" />
    <Button
        android:id="@+id/btBackFromSaleManagementMenuActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver" />

</LinearLayout>